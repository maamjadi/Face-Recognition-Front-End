<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FaceRecognitionFrontEnd.RegisterStudent">
    <ContentPage.Content>
           <StackLayout VerticalOptions="Center" Orientation="Vertical" Padding="30" Spacing="20" Margin="20">
             <Entry x:Name="UserNameEntry" Placeholder="User Name" TextColor="Gray" FontFamily="arial" Text="{Binding userName}" />

             <StackLayout VerticalOptions="Center" Orientation="Vertical" Padding="0" Spacing="10" Margin="0">
             <Label  TextColor="{StaticResource Button}" FontSize = "15" Text="Never registered before?" />      
           </StackLayout>
            <Button Margin="0,200,0,0" Text="Done" BackgroundColor="{StaticResource Button}" FontSize="20" TextColor="White" FontAttributes="Bold" Clicked="AddStudent" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
